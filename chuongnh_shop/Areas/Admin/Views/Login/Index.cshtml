@model chuongnh_shop.Models.Account

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1" />

    <link rel="stylesheet" type="text/css" href="/Areas/Admin/Content/css/framework-all.css">
    <link rel="shortcut icon" href="/Areas/Admin/Content/favicon.ico" />
</head>
<body class="" data-style="bg:#1F2C36" style="overflow:auto; height:100%">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <div class="mg-top-80 pd-top-0 mg-bottom-80">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <form action="/Admin/Login" method="post">
                        <div class="panel light-shadow white title-transparent" data-title="<i class='fa fa-circle'></i> Cửa hàng điện tử Trial Shop">
                            <h4><strong>Đăng nhập vào hệ thống</strong></h4>
                            <h5 data-style="mb:15">
                                Inputs can have icons according to the <code>type</code> attribute of the input element.
                            </h5>
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Username, new { @class = "control", @type = "user", required = "", @placeholder = "Nhập tài khoản" })
                                @*<input class="control" name="Username" placeholder="User input" type="user">*@
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new { @class = "control", @type = "password", required = "", @placeholder = "Nhập mật khẩu" })
                                @*<input class="control" name="Password" placeholder="Password input" type="password">*@
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <script src="/Areas/Admin/Content/js/jquery.js"></script>
    <script src="/Areas/Admin/Content/js/framework.js"></script>
    <script src="/Areas/Admin/Content/js/bootstrap.min.js"></script>
    <script src="/Areas/Admin/Content/js/jquery.slimscroll.min.js"></script>
    <script src="/Areas/Admin/Content/js/styleDemo.js"></script>
</body>
</html>
