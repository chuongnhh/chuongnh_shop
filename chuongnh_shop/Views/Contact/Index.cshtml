
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section js{
}
<div class="container">
    <div class="row m-t-50 p-b-10 m-b-20">
        <!-- Contact form -->
        <div class="col-sm-6">
            <h3 class="title">Gửi thông tin cho chúng tôi</h3>
            <p class="text-muted sub-title">Nếu bạn có thắc mắc gì, có thể gửi yêu cầu cho chúng tôi, và chúng tôi sẽ liên lạc với bạn sớm nhất có thể.</p><hr />
            <form role="form" name="ajax-form" action="#" method="post" class="contact-form" data-parsley-validate="" novalidate="">

                <div class="form-group">
                    <input class="form-control input-sm" name="name" placeholder="Họ tên của bạn" type="text" value="" required="">
                </div>
                <!-- /Form-name -->

                <div class="form-group">
                    <input class="form-control input-sm" name="email" type="email" placeholder="Email của bạn" value="" required="">
                </div>
                <!-- /Form-email -->

                <div class="form-group">
                    <textarea class="form-control input-sm" name="message" rows="5" placeholder="Viết thông tin" required=""></textarea>
                </div>
                <!-- /Form Msg -->

                <div class="row">
                    <div class="col-xs-12">
                        <div class="">
                            <button type="submit" class="btn btn-teal btn-bordered waves-light waves-effect btn-sm m-b-5">Gửi cho chúng tôi</button>
                        </div>
                    </div> <!-- /col -->
                </div> <!-- /row -->
            </form>
            <!-- /form -->
        </div> <!-- end col -->
        <div class="col-sm-6">
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.5372303289682!2d106.76790131435119!3d10.84668299227386!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317527a09857dccb%3A0xd92a4d13b81b0fe7!2zMTQgSOG7r3UgTmdo4buLLCBCw6xuaCBUaOG7jSwgVGjhu6cgxJDhu6ljLCBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1477645287575"
                        frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        style="width: 100%; height: 362px;"></iframe>
            </div>
        </div> <!-- end col -->
    </div>
    <!-- End row -->
</div>