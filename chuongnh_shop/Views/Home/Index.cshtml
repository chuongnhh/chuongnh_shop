
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row m-t-0 p-b-10 m-b-10">
    <div class="col-xm-12 col-sm-12">
        @{ Html.RenderAction("Slider", "Home");}
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            @for (int i = 0; i < 2; i++)
            {
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <h4 class="m-t-0 text-uppercase"><a href="#">Danh sách sản phẩm</a></h4>
                    </div>
                    <div class="col-xs-12 col-sm-6 hidden-xs">
                        <div class="m-t-5 pull-right"><a href="#">Xem tất cả</a></div>
                    </div>
                </div>
                <div class="border m-b-20"></div>
                <div class="row">
                    @for (int j = 0; j < 4; j++)
                {
                        <div class="col-xs-12 col-sm-6 col-md-4 col-md-3">
                            <div class="property-card">
                                <a href="#">
                                    <div class="property-image img-thumb" style="background: url('/Content/images/properties/1.jpg') center center/ cover no-repeat;">
                                        <span class="property-label label label-warning">Mới</span>
                                    </div>
                                </a>
                                <div class="property-content">
                                    <div class="listingInfo">
                                        <div class="">
                                            <h5 class="text-success m-t-0">Giá sản phẩm: <strong>125,000VNĐ</strong></h5>
                                        </div>
                                        <div class="">
                                            <h3 class="text-overflow"><a href="#" class="text-dark">4BHK Alexander Court,New York</a></h3>
                                            <p class="text-muted text-overflow"><i class="fa fa-cube m-r-5"></i>Trạng thái: <strong>Còn hàng</strong></p>
                                            <div class="m-t-20">
                                                <a href="#" class="btn btn-custom btn-bordered waves-effect w-md waves-light m-b-5 btn-block">Xem chi tiết</a>
                                            </div>

                                        </div>
                                    </div>
                                    <!-- end. Card actions -->
                                </div>
                                <!-- /inner row -->
                            </div>
                            <!-- End property item -->
                        </div>
                    }
                </div> <!--end row -->
            }
        </div>
        <!-- end col -->
    </div>
</div>