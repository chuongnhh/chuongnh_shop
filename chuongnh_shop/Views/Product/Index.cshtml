
@{
    ViewBag.Title = "Sản phẩm | Spendingshop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- BEGIN #page-header -->
<div id="page-header" class="section-container page-header-container bg-black">
    <!-- BEGIN page-header-cover -->
    <div class="page-header-cover">
        <img src="/Upload/Slider/0.jpg" alt="" />
    </div>
    <!-- END page-header-cover -->
    <!-- BEGIN container -->
    <div class="container">
        <h1 class="page-header">Sản phẩm <b>Outdoor LED</b></h1>
    </div>
    <!-- END container -->
</div>
<!-- BEGIN #page-header -->
<!-- BEGIN search-results -->
<div id="search-results" class="section-container bg-silver">
    <!-- BEGIN container -->
    <div class="container">
        <!-- BEGIN search-container -->
        <div class="search-container">
            <!-- BEGIN search-content -->
            <div class="search-content">
                <!-- BEGIN search-toolbar -->
                <div class="search-toolbar">
                    <!-- BEGIN row -->
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Chúng tôi tìm thấy 65 mục cho "Outdoor LED Products"</h4>
                        </div>
                        <!-- END col-6 -->
                        <!-- BEGIN col-6 -->
                        <div class="col-md-6 text-right">
                            <ul class="sort-list">
                                <li class="text"><i class="fa fa-filter"></i> Sort by:</li>
                                <li class="active"><a href="#">Popular</a></li>
                                <li><a href="#">New Arrival</a></li>
                                <li><a href="#">Discount</a></li>
                                <li><a href="#">Price</a></li>
                            </ul>
                        </div>
                        <!-- END col-6 -->
                    </div>
                    <!-- END row -->
                </div>
                <!-- END search-toolbar -->
                <!-- BEGIN search-item-container -->
                <div class="search-item-container">
                    <!-- BEGIN item-row -->
                    <div class="row row-space-0">
                        @for (int j = 0; j < 9; j++)
                        {
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <!-- BEGIN item -->
                                <div class="item item-thumbnail">
                                    <a href="/Product/Detail" class="item-image">
                                        <img src="/Upload/Images/Product/product3.jpg" class="img img-responsive" alt="" />
                                        <div class="discount">Khuyến mãi 15%</div>
                                    </a>
                                    <div class="item-info">
                                        <h4 class="item-title">
                                            <a href="/Product/Detail">Aqua Underwater luminaires</a>
                                        </h4>
                                        <p class="item-desc">A compact recessed underwater projector for swimming pools</p>
                                        <div class="item-price">$649.00</div>
                                        <div class="item-discount-price">$739.00</div>
                                    </div>
                                </div>
                                <!-- END item -->
                            </div>
                        }
                    </div>
                    <!-- END item-row -->
                </div>
                <!-- END search-item-container -->
                <!-- BEGIN pagination -->
                <div class="text-center">
                    <ul class="pagination m-t-0">
                        <li class="disabled"><a href="javascript:;">Lùi lại</a></li>
                        <li class="active"><a href="javascript:;">1</a></li>
                        <li><a href="javascript:;">2</a></li>
                        <li><a href="javascript:;">3</a></li>
                        <li><a href="javascript:;">4</a></li>
                        <li><a href="javascript:;">5</a></li>
                        <li><a href="javascript:;">Kế tiếp</a></li>
                    </ul>
                </div>
                <!-- END pagination -->
            </div>
            <!-- END search-content -->
            <!-- BEGIN search-sidebar -->
            <div class="search-sidebar">
                <h4 class="title">Lọc bởi</h4>
                <form action="#" method="POST" name="filter_form">
                    <div class="form-group">
                        <label class="control-label">Từ khóa tìm kiếm</label>
                        <input type="text" class="form-control input-sm" name="keyword" value="" placeholder="Nhập từ khóa" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Giá bán</label>
                        <div class="row row-space-0">
                            <div class="col-md-5">
                                <input type="number" class="form-control input-sm" name="price_from" value="10" placeholder="Giá từ" />
                            </div>
                            <div class="col-md-2 text-center p-t-5 f-s-12 text-muted">đến</div>
                            <div class="col-md-5">
                                <input type="number" class="form-control input-sm" name="price_to" value="10000" placeholder="Giá đến" />
                            </div>
                        </div>
                    </div>
                    <div class="m-b-30">
                        <button type="submit" class="btn btn-sm btn-inverse"><i class="fa fa-search"></i> Lọc</button>
                    </div>
                </form>
                <h4 class="title m-b-0">Loại sản phẩm</h4>
                <ul class="search-category-list">
                    <li><a href="#">Outdoor LED Products<span class="pull-right">(10)</span></a></li>
                    <li><a href="#">Conventional Products<span class="pull-right">(15)</span></a></li>
                    <li><a href="#">Indoor LED Downlight <span class="pull-right">(32)</span></a></li>
                    <li><a href="#">Power Connection <span class="pull-right">(4)</span></a></li>
                    <li><a href="#">DMX & Control System <span class="pull-right">(6)</span></a></li>
                </ul>
            </div>
            <!-- END search-sidebar -->
        </div>
        <!-- END search-container -->
    </div>
    <!-- END container -->
</div>
<!-- END search-results -->